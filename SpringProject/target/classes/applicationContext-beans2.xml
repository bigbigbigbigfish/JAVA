<?xml  version="1.0"  encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd


       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop.xsd">


    <bean id="bean2" class="com.cao.bean2.Bean2" scope="prototype">
        <property name="bean3"  ref="bean3"/>
        <property name="bean4"  ref="bean4"/>
        <property name="bean5"  ref="bean5"/>
    </bean>

    <!--public property-->
    <bean id="abstractBean" abstract="true">
        <property name="id" value="1"/>
        <property name="username" value="siemens"/>
    </bean>

    <bean id="bean3" class="com.cao.bean2.Bean3" parent="abstractBean">
        <property name="password" value="123"/>
    </bean>

    <bean id="bean4" class="com.cao.bean2.Bean4" parent="abstractBean">

    </bean>

    <bean id="bean5" class="com.cao.bean2.Bean5">
       <property name="age" value="100"/>
    </bean>



</beans>